    "format-disconnected": "Disconnected ï€",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ï€",
    "unknown-tag": "N/A",
    "interval": 2,
    "artist-len": 20,
    "on-click": "playerctl play-pause",
    "title-len": 40,
    "consume-icons": {
      "on": "ïƒ„ ",
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ï´</span> ",
      "on": "ï´ ",
    },
    "repeat-icons": {
      "on": "ï€ ",
    },
    "single-icons": {
