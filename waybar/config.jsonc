  "custom/pomo": {
    "exec": "pomo.sh clock",
    "interval": 1,
    "format": "{}",
    "on-click": "pomo.sh pause",
    "on-middle-click": "i3-gnome-pomodoro toggle",
    "on-right-click": "pomo.sh stop",
  },
  "custom/weather": {
    "format": "{}",
    "tooltip": true,
    "interval": 900,
    "exec": "$HOME/.config/waybar/scripts/wttr.py",
    "return-type": "json",
  },
}
