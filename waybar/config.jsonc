  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": ["hyprland/workspaces", "mpris"],
  "modules-center": ["hyprland/window"],
  "modules-right": [
    "group/audiolit",
    "cpu",
    "memory",
    "group/bat",
    "group/group-less",
    "tray",
  ],
