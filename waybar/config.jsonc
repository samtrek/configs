  "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "format": "{icon}",
    "format-icons": {
      "locked": "ï€£",
      "unlocked": "ï‚œ",
    },
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>",
  },
  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": ["", "ï‹’"],
    "tooltip": true,
    "tooltip-format": "{app}: {title}",
  },

  "hyprland/workspaces": {
    "format": "{name}",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
  },

  "hyprland/window": {
    "separate-outputs": true,
  },
  "mpris": {
    "format": "{player_icon} {title} - {artist}",
    "format-paused": "{status_icon} <i>{title} - {artist}</i>",
    // "dynamic-len": 60,
    "title-len": 45,
    "artist-len": 20,
    "album-len": 20,
    "player-icons": {
      "default": "â–¶",
      "mpv": "ğŸµ",
    },
    "status-icons": {
      "paused": "â¸",
    },
    // "ignored-players": ["firefox"]
  },

  "group/group-less": {
    "orientation": "inherit",
    "drawer": { "transition-duration": 500, "children-class": "not-less" },
    "modules": ["clock", "custom/weather", "custom/pomo"],
  },

  "group/bat": {
    "orientation": "inherit",
    "drawer": { "transition-duration": 500 },
    "modules": ["battery", "battery#bat2", "power-profiles-daemon"],
  },

  "group/audiolit": {
    "orientation": "inherit",
    "drawer": { "transition-duration": 500, "children-class": "not-less" },
    "modules": ["wireplumber", "backlight"],
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ïƒ§",
      "performance": "ïƒ§",
      "balanced": "ï‰",
      "power-saver": "ï¬",
